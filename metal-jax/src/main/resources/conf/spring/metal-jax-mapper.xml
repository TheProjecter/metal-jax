<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

	<bean id="metal-jax-xmlMapper" class="metal.core.mapper.XmlMapper" parent="metal-core-xmlMapper">
		<property name="modelClasses">
			<list merge="true">
				<value>metal.jax.front.ResponseMessage</value>
			</list>
		</property>
	</bean>
	
	<bean id="metal-jax-jsonMapper" class="metal.core.mapper.JsonMapper" parent="metal-jax-xmlMapper"/>

</beans>
