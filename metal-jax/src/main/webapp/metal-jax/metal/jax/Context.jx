//@private
function initClass() {
	$public.loadClass = ClassLoader.getContext().loadClass;
	$public.findClass = ClassLoader.getContext().findClass;
}

//@public
function toggleEvent(event, callback, positive) {
	positive = arguments.length == 2 || positive;
	if (callback) {
		var callbacks = this.bindings[event];
		if (!callbacks) {
			callbacks = this.bindings[event] = [];
		}
		if (positive) {
			callbacks.push(callback);
		} else {
			var index = callbacks.indexOf(callback);
			if (index >= 0) {
				callbacks.splice(index, 1);
			}
		}
	}
	return callback;
}

