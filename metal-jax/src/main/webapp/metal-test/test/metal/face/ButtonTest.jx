/**
 * @context ButtonTest
 * @imports meta4.face.Face
 * @imports meta4.face.Button
 */

//@protected
function initObject() {
	var bean;

	// Face with default face and default label
	$beans["button0"] = new Face();

	// Face with custom label
	bean = $beans["button1"] = new Face();
	bean.setLabel("${name} with custom label");
	
	// Face with info property
	bean = $beans["button2"] = new Face();
	bean.setLabel("${name} with info property");
	bean.setInfo("info: ${label}");
	
	// Face with custom face
	bean = $beans["button2"] = new Face();
	bean.setFace('<button type="button" style="display:block;background:yellow;"></button>');
	bean.setLabel("${name} with custom face");
	
	// Face with label node
	bean = $beans["button2"] = new Face();
	bean.setFace('<button type="button" style="display:block;background:yellow;"><span id="label" style="background:orange;"></span></button>');
	bean.setLabel("${name} with label node");
	
	// Face with external face
	bean = $beans["button2"] = new Button();
	bean.setLabel("${name} with external face");
}
