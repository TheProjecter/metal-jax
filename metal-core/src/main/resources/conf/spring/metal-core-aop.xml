<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xmlns:aop="http://www.springframework.org/schema/aop"
xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-3.0.xsd">

	<bean id="metal.core.aop.InvocationAdvice" class="metal.core.aop.InvocationAdvice"/>
	<bean id="metal.core.aop.ExceptionAdvice" class="metal.core.aop.ExceptionAdvice"/>
	<aop:config>
		<aop:pointcut id="metal.core.aop.ServiceExecution" expression="execution(public * metal.*.service..*Service.*(..))"/>
		<aop:aspect id="metal.core.aop.ServiceInvocation" ref="metal.core.aop.InvocationAdvice">
			<aop:around pointcut-ref="metal.core.aop.ServiceExecution" method="invoke"/>
		</aop:aspect>
		<aop:aspect id="metal.core.aop.ServiceException" ref="metal.core.aop.ExceptionAdvice">
			<aop:after-throwing pointcut-ref="metal.core.aop.ServiceExecution" method="handle" throwing="ex"/>
		</aop:aspect>
	</aop:config>
	
</beans>
